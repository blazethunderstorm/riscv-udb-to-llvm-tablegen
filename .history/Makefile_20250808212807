
PYTHON := python3
SCRIPT := convert.py

INPUT := input.yaml
OUTPUT := output.td

convert:
	$(PYTHON) $(SCRIPT) $(INPUT) $(OUTPUT)


clean:
	rm -f $(OUTPUT)

# Help message
help:
	@echo "Usage:"
	@echo "  make convert    # Convert input.yaml to output.td"
	@echo "  make clean      # Remove output.td"
